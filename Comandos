);

ALTER TABLE conta
add FOREIGN KEY (id) References Banco(id)


SELECT id,cliente,cidade from banco WHERE cidade = 'São paulo'

SELECT id,cliente,uf,cidade from banco WHERE NOT cidade = 'São paulo' AND uf = 'SP'


UPDATE Banco
SET uf = 'MG'
