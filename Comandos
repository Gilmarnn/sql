SET uf = 'MG'
WHERE id =4

UPDATE Banco
SET UF = 'MG'
WHERE cidade LIKE '%Minas%' AND UF = 'MG';

SELECT * FROM Banco
WHERE id BETWEEN 1 AND 4

SELECT * FROM Banco
WHERE uf = 'MG'
